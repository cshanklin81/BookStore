@page

@model BookStore.Pages.PurchaseModel



<h2>Your Cart</h2>


<table class="table table-bordered table-striped">
    
    <thead>
        <tr>
            <th>Book</th><th>Quantity</th><th class="text-right">Price</th><th>Subtotal</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var line in Model.Cart.Lines)
        {
            <tr>
                <td>@line.Book.Title</td>
                <td>@line.Quantity</td>
                <td class="text-right">@line.Price.ToString("c")</td>
                <td class="text-right">@((line.Quantity * line.Price).ToString("c"))</td>
                <td class="text-center">
                    <form asp-page-handler="Remove" method="post">
                        <input type="hidden" name="BookId"
                               value="@line.Book.BookId" />
                        <input type="hidden" name="returnUrl"
                               value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Remove
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <td colspan="3">Total: </td>
        <td class="text-right">@Model.Cart.ComputeTotalCost().ToString("c")</td>
    </tfoot>
</table>

<div>

</div>

<div class="text-center">
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
</div>
