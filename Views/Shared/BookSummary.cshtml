
@model Book

<tr>
    <td>@Model.Title</td>
    <td>@Model.AuthorFirstName</td>
    <td>@Model.AuthorMiddleName</td>
    <td>@Model.AuthorLastName</td>
    <td>@Model.Publisher</td>
    <td>@Model.ISBN</td>
    <td>@Model.Classification</td>
    <td>@Model.Category</td>
    <td>@Model.NumPages</td>
    <td>@Model.Price</td>
    <td>
        <form id="@Model.BookId" asp-page="/Purchase" method="post">
            <input type="hidden" asp-for="BookId" />
            <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
            <span class="card-text p-1">
                <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                    Add To Cart
                </button>
            </span>
        </form>
    </td>
</tr>

